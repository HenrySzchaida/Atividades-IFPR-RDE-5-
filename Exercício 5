programa {
	funcao inicio() {
	    
		
		cadeia letra
		
		escreva("Digite uma letra e falarei se é consoante ou vogal: ")
		leia(letra)
		
		se (letra == "a" ou letra == "e" ou letra == "i" ou letra == "o" ou letra == "u") 
		    escreva("A sua letra será uma vogal!")
		}
		    senao{
		        escreva("A sua letra será uma consoante!")
		    }
		
	
}
